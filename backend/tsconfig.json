// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./",

    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*", "src/server.ts"],

  "exclude": ["node_modules", "dist"]
}
